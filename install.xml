<?xml version="1.0" encoding="utf-8"?>
<modification>
    <code>moloni_invoice_solutions</code>
    <name>Moloni - Invoice solutions</name>
    <version>1.0</version>
    <author>Nuno Almeida</author>
    <link>https://moloni.pt</link>
    <file path="admin/view/template/sale/order_list.twig">
        <operation>
            <search trim="true"><![CDATA[
            <button type="button" data-toggle="dropdown" class="btn btn-primary dropdown-toggle"><span class="caret"></span></button>
            ]]></search>
            <add position="before" trim="true"><![CDATA[
            {{order.moloni_buttom}}
            ]]></add>
        </operation>
    </file>
    <file path="admin/view/template/catalog/product_form.twig">
        <operation>
            <search><![CDATA[
            <td class="text-right"><input type="text" name="product_option[{{ option_row }}][product_option_value][{{ option_value_row }}][quantity]"
            ]]></search>
            <add position="before" trim="true"><![CDATA[
            <td class="text-right"><input type="text" name="product_option[{{ option_row }}][product_option_value][{{ option_value_row }}][quantity]" value="{{ product_option_value.quantity }}" placeholder="{{ entry_quantity }}" class="form-control" /></td>
            ]]></add>
        </operation>
        <operation>
            <search><![CDATA[
            html += '  <td class="text-right"><input type="text" name="product_option[' + option_row + '][product_option_value][' + option_value_row + '][quantity]" value="" placeholder="{{ entry_quantity }}" class="form-control" /></td>';
            ]]></search>
            <add position="before" trim="true"><![CDATA[
            html += '  <td class="text-right"><input type="text" name="product_option[' + option_row + '][product_option_value][' + option_value_row + '][quantity]" value="" placeholder="{{ entry_quantity }}" class="form-control" /></td>';
            ]]></add>
        </operation>
        <operation>
            <search><![CDATA[
            html += '        <td class="text-right">{{ entry_quantity }}</td>';
            ]]></search>
            <add position="after" trim="true"><![CDATA[
            html += '        <td class="text-right">{{ entry_model }}</td>';
            ]]></add>
        </operation>
        <operation>
            <search limit="1"><![CDATA[
            <td class="text-right">{{ entry_quantity }}</td>
            ]]></search>
            <add position="after" trim="true"><![CDATA[
            <td class="text-right">{{ entry_quantity }}</td>
            ]]></add>
        </operation>
    </file>
</modification>